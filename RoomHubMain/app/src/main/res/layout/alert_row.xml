<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/alert_row"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:padding="4dp"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:id="@+id/alert_row_image"
            android:layout_centerVertical="true"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
            android:layout_toRightOf="@+id/alert_row_image"
            android:id="@+id/alert_row_header"
            android:textStyle="bold"
            android:layout_toEndOf="@+id/alert_row_image" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:id="@+id/alert_row_text"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:textSize="24dp"
            android:layout_toEndOf="@id/alert_row_image"
            android:layout_toRightOf="@id/alert_row_image"
            android:layout_below="@id/alert_row_header"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
            android:textStyle="italic"
            android:textSize="12dp"
            android:id="@+id/alert_row_date"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            tools:ignore="RelativeOverlap"
            android:padding="2dp"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>
