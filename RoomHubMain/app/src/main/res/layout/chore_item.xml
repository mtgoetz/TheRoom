<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/chorev"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="0dp">


        <TextView
            android:id="@+id/chore_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="6dp"
            android:text="Chore Name"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body2"
            android:textSize="24sp"/>

        <TextView
            android:id="@+id/chore_c_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/chore_name"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="Last completed by "
            android:textSize="12sp" />

        <TextView
            android:id="@+id/chore_cby"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/chore_c_text"
            android:layout_alignBottom="@+id/chore_c_text"
            android:layout_toEndOf="@+id/chore_c_text"
            android:layout_toRightOf="@+id/chore_c_text"
            android:text="-"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/chore_on_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/chore_cby"
            android:layout_alignBottom="@+id/chore_cby"
            android:layout_toEndOf="@+id/chore_cby"
            android:layout_toRightOf="@+id/chore_cby"
            android:text=" on "
            android:textSize="10sp" />

        <TextView
            android:id="@+id/chore_cdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/chore_on_text"
            android:layout_alignBottom="@+id/chore_on_text"
            android:layout_toEndOf="@+id/chore_on_text"
            android:layout_toRightOf="@+id/chore_on_text"
            android:text="-"
            android:textSize="10sp" />

        <Button
            android:id="@+id/complete_button"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@color/colorAccent"
            android:contentDescription="vcx"
            android:text="Completed"
            android:textColor="@android:color/white"
            android:textSize="12sp" />
    </RelativeLayout>

</android.support.v7.widget.CardView>